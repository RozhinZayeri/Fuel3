<% layout('layouts/boilerplate')%>

  <div class="row">
    <div class="col-md-4">
      <h2>Welcome <%= user.username %></h2>
      <div class="thumbnail">
      </div>
    </div>
  </div>

<div class="row">
  <h1 style="text-align: center;">Edit Profile</h1>
  <div class="rwd-form">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
	  <div class="form-group">
        <label for="fullname">FullName</label>
        <input class="form-control" type="text" name="user[fullname]" value="<%= user.fullname %>" autocomplete="off" required />
      </div>
      
		<h5>
			ADDRESS 1 (Required)
		</h5>
	  <div class="mb-3">
		<label class="form-label" for="street">Street</label>
		<input class="form-control" type="textbox" maxlength="100"  id="address1" name="user[street]" value ="<%= user.street %>" placeholder="Street" required>
		</div>
		<h5>
			Street 2 (Optional)
		</h5>
		<div class="mb-3">
		<label class="form-label" for="street2">Street2</label>
		<input class="form-control" type="textbox" maxlength="100"  id="street2" name="user[street2]" placeholder="<%= user.street2 %>"value="<%= user.street2 %>">
		</div>
		
	 <div class="mb-3">
		<label class="form-label" for="city">City:</label>
	    <input class="form-control" type="text" maxlength="100" id="city" name="user[city]" placeholder="City" value="<%= user.city %>" required>
	</div>
	<div id="validation-message"></div>	
		
						<div class="mb-3">
							<label class="form-label" for="state">State: <%= user.state %></label><br>
								<select name="user[state]">
