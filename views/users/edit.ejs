									<option value="WV">WV</option>
									<option value="WY">WY</option>
								</select>		
						</div>
						<div id="validation-message"></div>	
				<div class="mb-3">
					<label class="form-label" for="zipcode">ZipCode:</label>
					<!-- <input class="form-control" maxlength="9" minlength="5" name="user[zipcode]" placeholder="ZipCode" value="zipcode" required> -->
					<input class="form-control" maxlength="9" minlength="5" name="user[zipcode]" placeholder="ZipCode" value="<%= user.zipcode %>" required>
				</div>
      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Update Profile</button>
      </div>
    </form>
    <hr>
    <!-- <a href="/password_reset">Reset password</a> -->
    <hr>
    <a href="/">Back</a>
  </div>
</div>
